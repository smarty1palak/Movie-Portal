<%if !@user.admin? %>
 <h1> Welcome  <h2><%= @user.name %></h2></h1>

<div>
<%= link_to "Movies List", movielist_path, class: "btn btn-lg btn-primary"  %>
</div>
<% else %>
<h1> Add a movie </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:movie, url: '/display') do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :language %>
      <%= f.text_field :language, class: 'form-control' %>
      <%= f.label :genre %>
      <%= f.text_field :genre, class: 'form-control' %>

      <%= f.submit "Add new Movie", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% end %>
